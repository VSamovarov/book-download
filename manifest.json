{
	"manifest_version": 3,
	"name": "Аудиокниги",
	"version": "1.0",
	"description": "Скачивание аудиокниг",
	"icons": {
		"48": "icon.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"downloads",
		"downloads.open"
	],
	"web_accessible_resources": [
		{
			"resources": ["sites.json"],
			"matches": ["<all_urls>"]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
